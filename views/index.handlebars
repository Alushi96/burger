<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Burgers</h1>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    <li class="order">
                        {{burger_name}}
                    </li>
                        <button class="devour" data-id="{{id}}" data-devoured="1">Devour</button>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li class="order">
                        {{burger_name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="create-form">
                <h2> Add A Burger</h2>
                <div class="form-group">
                    <label for="bg">Burger Name</label>
                    <input type="text" id="bg" name="burger_name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>