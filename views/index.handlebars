<h1>Burgers</h1>

<ul>
    {{#each burgers}}
    <li>
        {{burger_name}}

        <button class="devoured" data-id="{{id}}" data-devour="{{ture}}">Devour</button>
    </li>
    {{/each}}
</ul>

<h2> Add A Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bg">Burger Name</label>
        <input type="text" id="bg" name="burger_name" value="0">
    </div>

    <button type="submit">Add Burger</button>

</form>